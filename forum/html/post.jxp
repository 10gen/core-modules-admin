<% 
var t = arguments[0];
core.forum.post();
 %>
<div class="post">
  <div class="postbox">
    <a name="<%= t._id %>"/>
    <div class="titlebar">
      <%= t.title %> by <%= t.author %> (<%= t.ts %>)
      (<a href="#<%= t._id %>"/>#</a>)
    </div>
    <div class="content">
      <%= t.content %>
    </div>
    <a href="makepost?parentid=<%= t._id %>">Reply to this</a>
  </div>
  <%
    Forum.Post.findAllPosts(t).forEach(Forum.renderer.post);
  %>
</div>
